<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="16dp"
        android:paddingTop="13dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Searching for Recycling Vendors..."
        android:id="@+id/text_frag_2"
        android:textColor="#000"/>


    <ProgressBar
        android:id="@+id/progressBar3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/text_frag_2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/progressBar3"
        android:layout_marginTop="112dp"
        android:text="(Please wait normally it takes couple of seconds)"
        android:textAlignment="center"
        android:textSize="12dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/but_delivery"
                android:layout_marginStart="80dp"
                android:layout_marginTop="62dp"
                android:src="@drawable/caring" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginStart="42dp"
                android:layout_toEndOf="@+id/imageView3"
                android:src="@drawable/jb"
                android:id="@+id/imageView4" />

            <Button
                android:id="@+id/but_delivery"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="confirm"
                android:textColor="#FFF"
                android:background="@drawable/button"/>

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_frag2_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="37dp"
                android:text="(Recycling vendors are based on availability and nearest location)"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="72dp"
                android:layout_marginTop="138dp"
                android:text="Caring Recycling Sdn Bhd             (7.3 KM)"
                android:textAlignment="center"
                android:textSize="12dp"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:id="@+id/textView8"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/textView7"
                android:text="J.B. Goodcare Recycle Sdn Bhd   (11.6 KM)"
                android:textAlignment="center"
                android:textSize="12dp" />


        </RelativeLayout>

    </FrameLayout>


</RelativeLayout>