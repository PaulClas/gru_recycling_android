<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/testing_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Choose Your Preferred Timing"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAlignment="center"
        android:paddingTop="13dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/testing_text2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/but_next"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:paddingTop="7dp"
        android:text="(Time arrangement might be differ in terms of minutes)"
        android:textAlignment="center"
        android:textSize="12dp" />



    <Button
        android:id="@+id/but_next"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:text="Confirm"
        android:textColor="#FFF"
        android:background="@drawable/button"/>


    <ImageView
        android:id="@+id/imageSwitcher1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/testing_text"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/imageSwitcher2" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/imageSwitcher1"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageSwitcher2" />

    <ImageView
        android:id="@+id/imageSwitcher3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/imageSwitcher2"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/imageSwitcher2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="Afternoon"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageSwitcher2"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/imageSwitcher2"
        android:id="@+id/textView4"
        android:text="Morning"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageSwitcher3"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="Evening"
        android:id="@+id/textView5"
        android:textAlignment="center"/>


</RelativeLayout>